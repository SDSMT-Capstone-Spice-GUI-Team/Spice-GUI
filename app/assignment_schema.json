{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spice-GUI Assignment / Submission Schema",
  "type": "object",
  "required": ["meta", "diagram"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["title", "creator", "course"],
      "properties": {
        "title": {"type": "string"},
        "creator": {"type": "string"},
        "course": {"type": "string"},
        "due_date": {"type": "string", "format": "date-time"},
        "version": {"type": "string"}
      }
    },
    "diagram": {
      "type": "object",
      "required": ["components", "wires"],
      "properties": {
        "components": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["uid", "type", "x", "y"],
            "properties": {
              "uid": {"type": "string"},
              "type": {"type": "string"},
              "label": {"type": "string"},
              "value": {"type": "string"},
              "x": {"type": "number"},
              "y": {"type": "number"}
            }
          }
        },
        "wires": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["ep1", "ep2"],
            "properties": {
              "ep1": {
                "oneOf": [
                  {"type": "object", "required": ["comp", "pin"], "properties": {"comp": {"type": "string"}, "pin": {"type": "integer"}}},
                  {"type": "object", "required": ["x", "y"], "properties": {"x": {"type": "number"}, "y": {"type": "number"}}}
                ]
              },
              "ep2": {
                "oneOf": [
                  {"type": "object", "required": ["comp", "pin"], "properties": {"comp": {"type": "string"}, "pin": {"type": "integer"}}},
                  {"type": "object", "required": ["x", "y"], "properties": {"x": {"type": "number"}, "y": {"type": "number"}}}
                ]
              }
            }
          }
        }
      }
    },
    "tests": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "spice_commands": {"type": "string"},
          "measure": {"type": "string"},
          "expect": {"type": "string"}
        }
      }
    }
  }
}
